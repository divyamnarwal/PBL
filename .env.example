# Firebase Configuration
# Get these values from your Firebase Console: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# MQTT Configuration
# Change to your Raspberry Pi IP when deploying
VITE_MQTT_BROKER_URL=ws://localhost:9001
VITE_MQTT_TOPIC=sensor/co2

# MongoDB Configuration (for server-side scripts)
# Get your connection string from MongoDB Atlas:
# Data → Connect → Connect your application → Driver: Node.js
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# MQTT Bridge Configuration (for mqtt-mongodb-bridge.js)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_WS_URL=ws://localhost:9001
LOCATION=default
BATCH_SIZE=10
BATCH_TIMEOUT=5000
